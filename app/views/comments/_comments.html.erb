<div class="comments-container">
  <h2><%= Comment.model_name.human %></h2>
  <% if comments.any? %>
    <ul>
      <% comments.each do |comment| %>
        <% if comment.persisted? %>
          <li>
            <big>
            <%= comment.content %></br>
            </big>
            <small>
            <%= comment.created_at.to_s(:datetime_jp) %>
            by <%= User.find_by(id: comment.user_id).name %>
            </small>
            <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), comment_path(comment.id), method: :delete if comment.user_id == current_user.id %>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% else %>
    (<%= t('.no_comments') %>)
  <% end %>
</div>
