<div class="user-details show-item">
  <h1>ユーザー詳細</h1>

  <div class="detail-item">
    <h2>ユーザー名</h2>
    <p><%= @user.name %></p>
  </div>

  <div class="detail-item">
    <h2>メールアドレス</h2>
    <p><%= @user.email %></p>
  </div>

  <div class="detail-item">
    <h2>郵便番号</h2>
    <p><%= @user.postal_code %></p>
  </div>

  <div class="detail-item">
    <h2>住所</h2>
    <p><%= @user.address %></p>
  </div>

  <div class="detail-item">
    <h2>プロフィール</h2>
    <p><%= @user.profile %></p>
  </div>
</div>
